{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "description": "graphql boilerplate",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prakash-pun/graphql-boilerplate.git"
  },
  "keywords": [
    "graphql",
    "boilerplate"
  ],
  "author": "Prakash Pun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prakash-pun/graphql-boilerplate/issues"
  },
  "homepage": "https://github.com/prakash-pun/graphql-boilerplate#readme",
  "scripts": {
    "start": "ts-node-dev -r tsconfig-paths/register --respawn src/index.ts",
    "dev": "set NODE_PATH=./build && ts-node -r tsconfig-paths/register build/index.js",
    "build": "tsc -p .",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --config jest.config.js",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-plugin-jsdoc": "^46.8.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@types/graphql-upload": "^16.0.1",
    "apollo-server-express": "^3.6.3",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-upload": "^16.0.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  }
}
